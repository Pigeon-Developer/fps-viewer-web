{
  "compilerOptions": {
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "strict": true,
    "target": "ES2021",
    "baseUrl": "./",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
